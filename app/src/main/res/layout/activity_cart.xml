<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ishan387.testlogin.Cart" android:background="#e6f2ff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical" android:weightSum="10">


        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cartlist" android:layout_weight="8"
            android:background="@android:color/transparent">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_gravity="bottom"
            android:layout_weight="2"
            android:elevation="20dp"

            app:cardBackgroundColor="@color/colorPrimary"
            android:id="@+id/cardview">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/layout1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total"
                        android:textSize="24sp"
                        android:textColor="@android:color/white"
                        android:text="$3000"
                        />



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent" android:layout_below="@+id/layout1"
                    android:layout_height="wrap_content" android:orientation="horizontal" android:weightSum="10">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/selectdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginRight="1dp"
                        android:background="@android:color/holo_blue_dark"
                        android:text="Date"
                        android:layout_weight="5"
                        android:textColor="@android:color/white"
                        android:elevation="10dp"/>
                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/selecttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="5"
                        android:background="@android:color/holo_blue_dark"
                        android:text="TIME"
                        android:textColor="@android:color/white"
                        android:elevation="10dp"/>
                </LinearLayout>


                <android.support.v7.widget.AppCompatButton
                    android:layout_marginTop="1dp"
                    android:layout_below="@id/layout2"
                    android:id="@+id/placeorder"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"


                    android:padding="12dp"
                    android:background="@android:color/holo_blue_dark"
                    android:text="Place Order"
                    android:textColor="@android:color/white"
                    android:elevation="10dp"/>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>
